<div class="form-container form-small">
<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs form-text-p">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="two-buttons">
    <div class="form-actions button">
      <i class="fa-solid fa-user mr-2"></i>
        <%= f.button :submit, "Log in" %>
    </div>
  </div>


  <div class="links shared-link">
    <%= link_to "Forgot your password?", new_password_path(resource_name) if devise_mapping.recoverable? %>
  </div>


  <div class="links shared-link">
        <%= link_to "Not a member yet? Sign up HERE!", new_user_registration_path %>
  </div>
<% end %>

</div>
